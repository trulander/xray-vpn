# Default server для блокировки запросов по IP и неправильным доменам
server {
    listen 80 default_server;
    listen 443 ssl default_server;
    
    # Блокируем все остальные домены и IP адреса
    server_name _;
    
    # SSL reject для HTTPS запросов
    ssl_reject_handshake on;
    
    # Возвращаем 444 для HTTP запросов (закрывает соединение)
    return 444;
} 